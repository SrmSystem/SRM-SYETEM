<?xml version="1.0" encoding="UTF-8"?>
<!--
发送邮件的模板设置
-->
<configs>
    <!-- 一般模板 -->
    <!--
    name : 模板名称
    sender : 发送人名称
    subject : 邮件标题
    -->    
    <template name="tempName" sender="" subject="">
        <![CDATA[
          <html>
            <head>
                <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
                <style>
                    body{
                        font-size:9pt;
                    }
                </style>
            </head>
            <body>
      $orgName，您好：
                <p/>                
      $message
                <br/>
                <br/>            
      $userName
                <br/>
                <p/>
                <hr/>
                本邮件由系统自动发出，请勿回复！
                <p/>
                $signText
            </body>
          </html>
        ]]>
    </template>
    
    
